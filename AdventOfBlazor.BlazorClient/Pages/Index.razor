@page "/"

<MudText Typo="Typo.h4" Color="Color.Secondary">Welcome to Advent of Blazor!</MudText>
<MudText Typo="Typo.body1" Color="Color.Primary">Solutions to the excellent advent of code delivered using Blazor Client.  Use the tree view on the right to select the puzzle to run</MudText>

@code {
    private IEnumerable<Puzzles.PuzzleDataAttribute> Puzzles = new List<Puzzles.PuzzleDataAttribute>();
    private IEnumerable<int> Years { get; set; } = new List<int>();

    protected override void OnInitialized()
    {
        Puzzles = PuzzleManager.GetAllBasicPuzzles()
          .Where(p => p.Year != 0 && p.Day != 0)
          .OrderBy(p => p.Year)
          .ThenBy(p => p.Day);

        Years = Puzzles.Select(p => p.Year).Distinct().Order();
    }
}