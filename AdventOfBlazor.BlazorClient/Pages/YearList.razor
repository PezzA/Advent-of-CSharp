@page "/puzzle/{PuzzleYear:int}"

<h3>Puzzles for the year of @PuzzleYear</h3>


<MudTable Items="@Puzzles" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>Year</MudTh>
        <MudTh>Day</MudTh>
        <MudTh>Title</MudTh>
        <MudTh>Status</MudTh>
        <MudTh>TakesAges</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Year">@context.Year</MudTd>
        <MudTd DataLabel="Day">@context.Day</MudTd>
        <MudTd DataLabel="Title">@context.Title</MudTd>
        <MudTd DataLabel="Stars">@context.Stars</MudTd>
        <MudTd DataLabel="This Repo">@context.TakesAges</MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter]
    public int PuzzleYear { get; set; }

    private IEnumerable<Puzzles.PuzzleDataAttribute>? Puzzles = null;

    protected override void OnInitialized()
    {
      Puzzles= PuzzleManager.GetAllBasicPuzzles()
        .Where(p => p.Year == PuzzleYear)
        .OrderBy(p => p.Day);
    }
}
