@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider IsDarkMode="true" Theme="Themes.AdventOfCode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout >

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Home" Fixed="false" Color="MudBlazor.Color.Inherit" OnClick="@((e) => Home())" />
        <MudText Typo="Typo.h5" Class="ml-3" Color="MudBlazor.Color.Secondary">Advent of Blazor</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Fixed="false" Color="MudBlazor.Color.Inherit" OnClick="@((e) => Github())" />
    </MudAppBar>

   
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Fixed="false">

        
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {

    void Home()
    {
        NavigationManager.NavigateTo($"{Settings.WEB_PATH_PREFIX}", false);
    }

    void Github()
    {
        NavigationManager.NavigateTo($"https://github.com/PezzA/Advent-of-CSharp", false);
    }
}